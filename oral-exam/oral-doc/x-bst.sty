\RequirePackage{url}

\newif \ifshowBIBTYPE
\newif \ifshowBOOKPAGES
\newif \ifshowCODEN
\newif \ifshowDOI
\newif \ifshowDOIPERIOD
\newif \ifshowISBN
\newif \ifshowISSN
\newif \ifshowISSNL
\newif \ifshowLCCN
\newif \ifshowPRICE
\newif \ifshowURL

\newcommand{\showOPTIONAL}
{%
    \showBOOKPAGEStrue
    \showCODENtrue
    \showDOIPERIODtrue
    \showDOItrue
    \showISBNtrue
    \showISSNtrue
    \showISSNLtrue
    \showLCCNtrue
    \showPRICEtrue
    \showURLtrue
}

\newcommand{\hideOPTIONAL}
{%
    \showBOOKPAGESfalse
    \showCODENfalse
    \showDOIPERIODfalse
    \showDOIfalse
    \showISBNfalse
    \showISSNfalse
    \showISSNLfalse
    \showLCCNfalse
    \showPRICEfalse
    \showURLfalse
}

%%% By default, all extended fields (except bibtype) are shown:

\showBIBTYPEfalse
\showOPTIONAL
