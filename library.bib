issn = {15387933},
journal = {Journal of Thrombosis and Haemostasis},
keywords = {Aggregation,Protein kinase,Protein kinase C,Secretion,Thrombosis,Thromboxane generation},
number = {3},
pages = {454--462},
pmid = {20002545},
title = {{Diverse functions of protein kinase C isoforms in platelet activation and thrombus formation}},
