isbn = {1879-2472 (Electronic)$\backslash$r0049-3848 (Linking)},
issn = {18792472},
journal = {Thrombosis Research},
number = {4},
pages = {532--537},
pmid = {24440140},
publisher = {Elsevier Ltd},
title = {{The platelet and the biophysical microenvironment: Lessons from cellular mechanics}},
url = {http://dx.doi.org/10.1016/j.thromres.2013.12.037},
volume = {133},
year = {2014}
}
