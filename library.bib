journal = {Mol.Biosyst.},
keywords = {Blood Platelets,Calcium,Calcium Signaling,Computer Simulation,Cytosol,Extracellular Space,Mitochondria,Platelet Activation,Signal Transduction,Stochastic Processes,blood},
number = {1742-2051 (Electronic)},
