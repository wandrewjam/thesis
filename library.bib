number = {1274},
pages = {55--83},
pmid = {2901109},
title = {{The Reaction-Limited Kinetics of Membrane-to-Surface Adhesion and Detachment}},
url = {http://rspb.royalsocietypublishing.org/cgi/doi/10.1098/rspb.1988.0038},
volume = {234},
